PagerShowBorders=0				# Menu
ColorDefaultTaskBar="#1e1f29"
ColorNormalTaskBarApp="#1e1f29"
ColorNormalTaskBarAppText="#dfdbd2"
ColorActiveTaskBarApp="#1e1f29"
ColorActiveTaskBarAppText="white"
